{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": ["warn", 4],
        "no-shadow": "warn",
        "quotes": ["warn", "single", { "avoidEscape": true }]
    }
}
