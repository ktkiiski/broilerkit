{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "importsNotUsedAsValues": "error",
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "es2015", "esnext.asynciterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "sourceMap": false,
        "strict": true,
        "target": "ES2017"
    },
    "include": ["./types/modules.d.ts", "./**/*.tsx", "./**/*.ts"],
    "exclude": ["./node_modules/**"]
}
