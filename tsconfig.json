{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": ["dom", "dom.iterable", "es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules/**",
        "./dist/**"
    ]
}
